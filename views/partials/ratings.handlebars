<div class="block">
  {{#each this}}
  <div class="block">
    <div class="box" style="inline-flex">
      {{user.username}} on {{format_date created_at}}

      {{#ifEquals rating_score 1}}
      <span class="fa fa-cookie-bite"></span>
      {{/ifEquals}}

      {{#ifEquals rating_score 2}}
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      {{/ifEquals}}
      {{#ifEquals rating_score 3}}
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      {{/ifEquals}}
      {{#ifEquals rating_score 4}}
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      {{/ifEquals}}
      {{#ifEquals rating_score 5}}
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      <span class="fa fa-cookie-bite"></span>
      {{/ifEquals}}
      <div class="text">
        {{rating_comment}}
      </div>
      {{#ifEquals user.username session_user }}
      <button id="delete-rating" class="button" type="submit" value="{{id}}">Delete Rating</button>
      {{/ifEquals}}
    </div>
    <script src='../javascript/delete-rating.js'></script>
    </section>
    {{/each}}
  </div>