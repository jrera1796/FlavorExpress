<article class="recipe-card">
  <div class="recipe-info">
    <div class="card">
      <div class="card-image">
        <figure class="image " >
          <a href="/recipe/{{id}}"><img src="https://pj2-test-bucket.s3.us-west-1.amazonaws.com/{{photo_path}}"></a>
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4">{{title}}</p>
            <p class="subtitle is-6">Recipe by: {{user.username}}</p>
          </div>
        </div>
        <div class="content">
          <a href="/recipe/{{id}}">{{rating.length}} {{format_plural "View Detail" rating.length}}</a>
          <br>
          <p>{{rating.rating_comment.length}}</p>
        </div>
      </div>
    </div>
  </div>
</article>