<section>
  <h2>Create New Recipe</h2>
   <form class="new-recipe-form">
    <div>
      <label for="new-title">Title</label>
      <input type="text" id="new-title" name="new-title" />
    </div>
    <div>
      <label for="new-ingredients">Ingredients</label>
      <textarea id="new-ingredients" name="new-ingredients"></textarea>
    </div>
    <div>
      <label for="new-direction">Direction</label>
      <textarea id="new-direction" name="new-direction"></textarea>
    </div>
    <div>
      <label for="new-photo">Upload Photo</label>
      <input type="text" id="new-photo" name="new-photo" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if recipes.length}}
<section>
  <h2>Your Recipes</h2>
  <ol>
    {{#each recipes as |recipe|}}
    <li>
      {{> recipe-info recipe}}<a href="/dashboard/edit/{{recipe.id}}" class="edit-link">Edit Recipe</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-recipe.js"></script>